<!DOCTYPE html>
<html lang="no">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css">
  <!-- Tailwind CSS via CDN for now -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: {
              50: '#f0f9ff',
              100: '#e0f2fe',
              200: '#bae6fd',
              300: '#7dd3fc',
              400: '#38bdf8',
              500: '#0ea5e9',
              600: '#0284c7',
              700: '#0369a1',
              800: '#075985',
              900: '#0c4a6e',
              950: '#082f49',
            },
          }
        }
      }
    }
  </script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
  <!-- Header -->
  <header class="bg-primary-600 text-white shadow-md">
    <div class="container mx-auto px-4 py-3">
      <div class="flex justify-between items-center">
        <a href="/" class="text-2xl font-bold flex items-center">
          <span>IT-Quiz</span>
        </a>
        <nav class="hidden md:flex space-x-4">
          <a href="/" class="hover:text-primary-200 transition">Hjem</a>
          <a href="/quiz" class="hover:text-primary-200 transition">Quizzer</a>
          <a href="/faq" class="hover:text-primary-200 transition">FAQ</a>
          <a href="/about" class="hover:text-primary-200 transition">Om oss</a>
          <% if (user) { %>
            <a href="/quiz/my-quizzes" class="hover:text-primary-200 transition">Mine quizzer</a>
            <a href="/quiz/create" class="hover:text-primary-200 transition">Lag quiz</a>
            <% if (user.role === 'admin') { %>
              <a href="/admin" class="text-yellow-300 hover:text-yellow-100 transition">Admin</a>
            <% } %>
          <% } %>
        </nav>
        <div class="flex items-center space-x-4">
          <% if (user) { %>
            <div class="hidden md:flex items-center">
              <span class="mr-2">Hei, <%= user.username %></span>
              <a href="/profile" class="text-primary-200 hover:text-white transition">Min profil</a>
              <span class="mx-2">|</span>
              <a href="/auth/logout" class="text-primary-200 hover:text-white transition">Logg ut</a>
            </div>
          <% } else { %>
            <div class="hidden md:flex space-x-2">
              <a href="/auth/login" class="bg-white text-primary-600 hover:bg-primary-50 px-4 py-2 rounded-md transition">Logg inn</a>
              <a href="/auth/register" class="bg-primary-700 hover:bg-primary-800 text-white px-4 py-2 rounded-md transition">Registrer</a>
            </div>
          <% } %>
          <!-- Mobile menu button -->
          <button id="mobile-menu-button" class="md:hidden text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
      
      <!-- Mobile menu -->
      <div id="mobile-menu" class="md:hidden hidden pt-4 pb-2">
        <nav class="flex flex-col space-y-2">
          <a href="/" class="hover:text-primary-200 transition py-1">Hjem</a>
          <a href="/quiz" class="hover:text-primary-200 transition py-1">Quizzer</a>
          <a href="/faq" class="hover:text-primary-200 transition py-1">FAQ</a>
          <a href="/about" class="hover:text-primary-200 transition py-1">Om oss</a>
          <% if (user) { %>
            <a href="/quiz/my-quizzes" class="hover:text-primary-200 transition py-1">Mine quizzer</a>
            <a href="/quiz/create" class="hover:text-primary-200 transition py-1">Lag quiz</a>
            <% if (user.role === 'admin') { %>
              <a href="/admin" class="text-yellow-300 hover:text-yellow-100 transition py-1">Admin</a>
            <% } %>
            <div class="border-t border-primary-500 mt-2 pt-2">
              <a href="/profile" class="hover:text-primary-200 transition py-1 block">Min profil</a>
              <a href="/auth/logout" class="hover:text-primary-200 transition py-1 block">Logg ut</a>
            </div>
          <% } else { %>
            <div class="border-t border-primary-500 mt-2 pt-2 flex flex-col space-y-2">
              <a href="/auth/login" class="bg-white text-primary-600 hover:bg-primary-50 px-4 py-2 text-center rounded-md transition">Logg inn</a>
              <a href="/auth/register" class="bg-primary-700 hover:bg-primary-800 text-white px-4 py-2 text-center rounded-md transition">Registrer</a>
            </div>
          <% } %>
        </nav>
      </div>
    </div>
  </header>

  <!-- Main content -->
  <main class="flex-grow container mx-auto px-4 py-6">
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <%= error %>
      </div>
    <% } %>
    <% if (typeof success !== 'undefined' && success) { %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        <%= success %>
      </div>
    <% } %>
    
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="bg-gray-800 text-white py-8">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row justify-between">
        <div class="mb-4 md:mb-0">
          <h3 class="text-xl font-bold mb-2">IT-Quiz</h3>
          <p class="text-gray-400">Laget for IT-utdanning.no</p>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-8">
          <div>
            <h4 class="font-semibold mb-2">Navigasjon</h4>
            <ul class="space-y-1">
              <li><a href="/" class="text-gray-400 hover:text-white transition">Hjem</a></li>
              <li><a href="/quiz" class="text-gray-400 hover:text-white transition">Quizzer</a></li>
              <li><a href="/about" class="text-gray-400 hover:text-white transition">Om oss</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-2">Ressurser</h4>
            <ul class="space-y-1">
              <li><a href="/faq" class="text-gray-400 hover:text-white transition">FAQ</a></li>
              <% if (user) { %>
                <li><a href="/profile" class="text-gray-400 hover:text-white transition">Min profil</a></li>
              <% } else { %>
                <li><a href="/auth/login" class="text-gray-400 hover:text-white transition">Logg inn</a></li>
                <li><a href="/auth/register" class="text-gray-400 hover:text-white transition">Registrer</a></li>
              <% } %>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-2">Kontakt</h4>
            <ul class="space-y-1">
              <li><span class="text-gray-400">E-post: kontakt@it-utdanning.no</span></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="mt-8 pt-4 border-t border-gray-700 text-center text-gray-400">
        <p>&copy; <%= new Date().getFullYear() %> IT-Quiz. Alle rettigheter reservert.</p>
      </div>
    </div>
  </footer>

  <!-- Scripts -->
  <script>
    // Mobile menu toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  </script>
</body>
</html> 