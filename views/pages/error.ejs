<div class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4">
  <div class="mb-8">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-red-500 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
    </svg>
    <h1 class="text-3xl font-semibold mb-2">Oops! Det oppstod en feil</h1>
    <p class="text-gray-600 max-w-md mx-auto">
      Beklager, men vi kunne ikke fullføre forespørselen din.
    </p>
    
    <% if (error && error.message) { %>
      <div class="mt-4 p-4 bg-red-50 text-red-800 rounded-lg max-w-md mx-auto text-left">
        <p class="font-medium">Feilmelding:</p>
        <p class="mt-1"><%= error.message %></p>
        
        <% if (error.stack && process.env.NODE_ENV === 'development') { %>
          <p class="font-medium mt-3">Stack trace:</p>
          <pre class="mt-1 text-xs overflow-auto max-h-48 bg-gray-100 p-2 rounded"><%= error.stack %></pre>
        <% } %>
      </div>
    <% } %>
  </div>
  
  <div class="space-y-4">
    <a href="/" class="inline-block bg-primary-600 text-white py-2 px-6 rounded-md hover:bg-primary-700 transition focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
      Gå til forsiden
    </a>
    
    <div>
      <a href="javascript:history.back()" class="inline-block text-primary-600 hover:text-primary-800 font-medium">
        Gå tilbake
      </a>
    </div>
  </div>
</div> 