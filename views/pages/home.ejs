<!-- Hero Section -->
<section class="py-12 md:py-20 bg-gradient-to-br from-primary-600 to-primary-800 text-white rounded-lg shadow-xl mb-12">
  <div class="container px-6 mx-auto text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">Velkommen til IT-Quiz</h1>
    <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto">Test dine IT-kunnskaper eller lag dine egne quizzer for å utfordre andre!</p>
    
    <div class="flex flex-col sm:flex-row justify-center gap-4">
      <a href="/quiz" class="bg-white text-primary-700 hover:bg-primary-50 px-6 py-3 rounded-md font-medium text-lg transition shadow-md">
        Finn en quiz
      </a>
      <% if (user) { %>
        <a href="/quiz/create" class="bg-primary-700 text-white hover:bg-primary-800 px-6 py-3 rounded-md font-medium text-lg border-2 border-white transition shadow-md">
          Lag en quiz
        </a>
      <% } else { %>
        <a href="/auth/register" class="bg-primary-700 text-white hover:bg-primary-800 px-6 py-3 rounded-md font-medium text-lg border-2 border-white transition shadow-md">
          Registrer deg
        </a>
      <% } %>
    </div>
  </div>
</section>

<!-- Features Section -->
