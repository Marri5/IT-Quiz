<div class="max-w-4xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold mb-2">Resultater: <%= quiz.title %></h1>
    <p class="text-gray-600">Se hvordan du gjorde det på denne quizen.</p>
  </div>
  
  <!-- Score overview -->
  <div class="bg-white p-6 rounded-lg shadow-md mb-8">
    <div class="mb-6 text-center">
      <div class="inline-block relative mb-4">
        <% 
          const percentage = score.percentage;
          const strokeDasharray = 283; // Circumference of a circle with r=45
          const strokeDashoffset = strokeDasharray - (strokeDasharray * percentage) / 100;
          
          let scoreColor = 'text-red-500';
          if (percentage >= 80) {
            scoreColor = 'text-green-500';
          } else if (percentage >= 60) {
            scoreColor = 'text-yellow-500';
          } else if (percentage >= 40) {
            scoreColor = 'text-orange-500';
          }
        %>
        
        <svg class="w-32 h-32" viewBox="0 0 100 100">
          <!-- Background circle -->
          <circle 
            cx="50" 
            cy="50" 
            r="45" 
            fill="none" 
            stroke="#e6e6e6" 
            stroke-width="8"
          />
          
          <!-- Progress circle -->
          <circle 
            cx="50" 
            cy="50" 
            r="45" 
            fill="none" 
            stroke="<%= percentage >= 80 ? '#22c55e' : percentage >= 60 ? '#eab308' : percentage >= 40 ? '#f97316' : '#ef4444' %>" 
            stroke-width="8"
            stroke-dasharray="<%= strokeDasharray %>"
            stroke-dashoffset="<%= strokeDashoffset %>"
            transform="rotate(-90 50 50)"
          />
          
          <!-- Percentage text -->
          <text 
            x="50" 
            y="50" 
            text-anchor="middle" 
            dominant-baseline="central" 
            font-size="20" 
            font-weight="bold" 
            fill="<%= percentage >= 80 ? '#22c55e' : percentage >= 60 ? '#eab308' : percentage >= 40 ? '#f97316' : '#ef4444' %>"
          >
            <%= percentage %>%
          </text>
        </svg>
      </div>
      
      <h2 class="text-2xl font-bold <%= scoreColor %>">
        <% if (percentage >= 80) { %>
          Utmerket!
        <% } else if (percentage >= 60) { %>
          Godt jobbet!
        <% } else if (percentage >= 40) { %>
          Bra forsøk!
        <% } else { %>
          Prøv igjen!
        <% } %>
      </h2>
      
      <p class="mt-2 text-gray-600">
        Du fikk <%= score.earnedPoints %> av <%= score.totalPoints %> mulige poeng
      </p>
    </div>
    
    <div class="flex justify-center space-x-4">
      <a href="/quiz/play/<%= quiz._id %>" class="px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 transition">
        Ta quizen på nytt
      </a>
      <a href="/quiz" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300 transition">
        Finn flere quizzer
      </a>
    </div>
  </div>
  
  <!-- Detailed results -->
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-semibold mb-4">Detaljerte resultater</h2>
    
    <div class="space-y-6">
      <% quiz.questions.forEach((question, index) => { 
        const result = results[index];
        const isCorrect = result.isCorrect;
      %>
        <div class="p-4 border rounded-lg <%= isCorrect ? 'border-green-200 bg-green-50' : 'border-red-200 bg-red-50' %>">
          <div class="flex items-start justify-between">
            <h3 class="font-medium">
              <%= index + 1 %>. <%= question.questionText %>
              <% if (question.points > 1) { %>
                <span class="text-sm font-normal text-gray-600 ml-2">(<%= question.points %> poeng)</span>
              <% } %>
            </h3>
            
            <div class="flex-shrink-0 ml-2">
              <% if (isCorrect) { %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <svg class="h-3.5 w-3.5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Riktig
                </span>
              <% } else { %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  <svg class="h-3.5 w-3.5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                  Feil
                </span>
              <% } %>
            </div>
          </div>
          
          <% if (!isCorrect) { %>
            <div class="mt-3">
              <p class="text-sm font-medium text-gray-700">Riktig svar:</p>
              
              <% if (Array.isArray(result.correctAnswer)) { %>
                <!-- Matching -->
                <div class="mt-1 grid grid-cols-2 gap-2 text-sm">
                  <% result.correctAnswer.forEach(pair => { %>
                    <div class="flex items-center">
                      <span class="font-medium"><%= pair.left %>:</span>
                      <span class="ml-2"><%= pair.right %></span>
                    </div>
                  <% }) %>
                </div>
              <% } else { %>
                <p class="mt-1 text-sm"><%= result.correctAnswer %></p>
              <% } %>
            </div>
          <% } %>
          
          <% if (result.explanation) { %>
            <div class="mt-3 p-3 bg-white rounded border border-gray-200">
              <p class="text-sm font-medium text-gray-700">Forklaring:</p>
              <p class="mt-1 text-sm text-gray-600"><%= result.explanation %></p>
            </div>
          <% } %>
        </div>
      <% }) %>
    </div>
  </div>
  
  <div class="mt-8 text-center">
    <a href="/quiz" class="text-primary-600 hover:text-primary-800 inline-flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Tilbake til alle quizzer
    </a>
  </div>
</div> 