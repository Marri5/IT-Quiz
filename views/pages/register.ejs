<div class="max-w-md mx-auto">
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold mb-2">Registrer deg</h1>
    <p class="text-gray-600">Opprett en konto for å lage og ta quizzer.</p>
  </div>
  
  <% if (typeof error !== 'undefined' && error) { %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <%= error %>
    </div>
  <% } %>
  
  <div class="bg-white p-8 rounded-lg shadow-md">
    <form action="/auth/register" method="POST">
      <div class="mb-6">
        <label for="username" class="block text-gray-700 font-medium mb-2">Brukernavn</label>
        <input
          type="text"
          id="username"
          name="username"
          value="<%= typeof formData !== 'undefined' && formData.username ? formData.username : '' %>"
          class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500"
          required
          minlength="3"
          maxlength="30"
        >
        <p class="text-sm text-gray-500 mt-1">Mellom 3-30 tegn, kun bokstaver, tall og understrek.</p>
      </div>
      
      <div class="mb-6">
        <label for="email" class="block text-gray-700 font-medium mb-2">E-post</label>
        <input
          type="email"
          id="email"
          name="email"
          value="<%= typeof formData !== 'undefined' && formData.email ? formData.email : '' %>"
          class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500"
          required
        >
      </div>
      
      <div class="mb-6">
        <label for="password" class="block text-gray-700 font-medium mb-2">Passord</label>
        <input
          type="password"
          id="password"
          name="password"
          class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500"
          required
          minlength="6"
        >
        <p class="text-sm text-gray-500 mt-1">Minst 6 tegn, bruk en blanding av bokstaver og tall.</p>
      </div>
      
      <div class="mb-6">
        <label for="confirmPassword" class="block text-gray-700 font-medium mb-2">Bekreft passord</label>
        <input
          type="password"
          id="confirmPassword"
          name="confirmPassword"
          class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500"
          required
        >
      </div>
      
      <div class="mb-6">
        <label class="flex items-start">
          <input type="checkbox" name="terms" class="h-4 w-4 mt-1 text-primary-600 focus:ring-primary-500 border-gray-300 rounded" required>
          <span class="ml-2 text-gray-700">
            Jeg godtar <a href="#" class="text-primary-600 hover:text-primary-800">personvernerklæringen</a> og <a href="#" class="text-primary-600 hover:text-primary-800">brukervilkårene</a>
          </span>
        </label>
      </div>
      
      <button
        type="submit"
        class="w-full bg-primary-600 text-white py-2 px-4 rounded-md hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-colors"
      >
        Registrer deg
      </button>
    </form>
    
    <div class="mt-6 text-center">
      <p class="text-gray-600">
        Har du allerede en konto?
        <a href="/auth/login" class="text-primary-600 hover:text-primary-800 font-medium">Logg inn</a>
      </p>
    </div>
  </div>
  
  <div class="mt-8 text-center">
    <a href="/" class="text-primary-600 hover:text-primary-800 inline-flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Tilbake til forsiden
    </a>
  </div>
</div> 